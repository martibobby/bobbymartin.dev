---
import content from "../data/resume.yml";
---

<div class="flex flex-col">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:justify-between">
        <!-- Identify yourself -->
        <div class="grid grid-cols-1 divide-y gap-2 text-center md:text-left">
            <div>
                <h1
                    class="text-5xl mb-2 font-semibold leading-none dark:text-sky-700"
                >
                    {content.name}
                </h1>
                <!-- Objective Quote Callout -->
                <blockquote
                    class="my-2 mb-2 pl-2 border-l-2 border-r-2 border-sky-700 md:border-r-0"
                >
                    <p
                        class="text-2xl print:w-50 font-medium text-gray-900/50 dark:text-[#C5D1DE]"
                    >
                        {content.objective}
                    </p>
                </blockquote>
            </div>
            <!-- Badges -->
            <div class="hidden md:flex pt-2">
                {
                    content.badge.map((item) => (
                        <img
                            alt={item.alt}
                            src={item.src}
                            class="h-4"
                        />
                    ))
                }
            </div>
        </div>
        <!-- Contact -->
        <section class="flex flex-wrap justify-center gap-x-2 md:flex-col bg-gray-50 md:bg-white dark:bg-[#23262d]">
            {
                content.contact.map((item) => (
                    <p class="dark:text-[#C5D1DE] hover:text-gray-900/50">
                        <i class={item.icon} />{" "}
                        <a href={item.href}>{item.value}</a>
                    </p>
                ))
            }
        </section>
    </div>

    <!-- Experience / Timeline -->
    <h2 class="text-3xl text-sky-700 dark:text-sky-700 font-semibold mt-4">
        <i class={content.experience.icon}></i>
        {content.experience.heading}
    </h2>

    <div class="grid grid-cols-5 gap-4">
        {
            content.experience.timeline.map((item) => (
                <>
                    <div class="justify-self-end text-right">
                        <h3 class="text-xl dark:text-sky-700">
                            {item.company}
                        </h3>
                        <p class="text-sm text-gray-500 print:text-gray-300 dark:text-gray-400">
                            {item.dates}
                        </p>
                    </div>
                    <div class="col-span-4 relative ps-8 border-s border-gray-200 dark:border-gray-700">
                        <span class="absolute grid text-sky-700 rounded-full bg-white dark:bg-[#23262d] w-6 h-6 rounded-full -start-2 inset-y-1 end-2 ring-8 ring-white dark:ring-[#23262d] dark:bg-[#23262d]">
                            <i class="bi-arrow-90deg-right text-lg place-self-end" />
                        </span>
                        <div class="flex gap-x-2 flex-wrap items-baseline">
                            <h3 class="text-xl dark:text-sky-700">
                                {item.title}
                                <h4 class="font-light text-gray-500 print:text-gray-300 dark:text-gray-400">
                                    {item.subtitle}
                                </h4>
                            </h3>
                        </div>
                        <ul class="list-disc ml-6">
                            {item.bullets.map((item) => (
                                <li class="dark:text-[#C5D1DE]">
                                    {item}
                                </li>
                            ))}
                        </ul>
                    </div>
                </>
            ))
        }
    </div>

    <!-- Education / Skills -->
    <div class="mt-4">
        <h2 class="text-3xl text-sky-700 dark:text-sky-700 font-semibold">
            <i class={content.education.icon}></i>
            {content.education.heading}
        </h2>
        <div class="grid grid-cols-5 gap-4">
            {
                content.education.degrees.map((item) => (
                    <>
                        <div class="justify-self-end text-right">
                            <h3 class="text-xl dark:text-sky-700">
                                {item.uni}
                            </h3>
                            <p class="text-sm text-gray-500 print:text-gray-300 dark:text-gray-400">
                                {item.class}
                            </p>
                        </div>
                        <div class="col-span-4 relative ps-8 border-s border-gray-200 dark:border-gray-700">
                            <span class="absolute grid text-sky-700 rounded-full bg-white dark:bg-[#23262d] w-6 h-6 rounded-full -start-2 inset-y-1 end-2 ring-8 ring-white dark:ring-[#23262d] dark:bg-[#23262d]">
                                <i class="bi-arrow-90deg-right text-lg place-self-end" />
                            </span>
                            <div class="flex gap-x-2 flex-wrap items-baseline">
                                <h3 class="text-xl dark:text-sky-700">
                                    {item.major}
                                    <small class="font-light text-gray-500 print:text-gray-300 dark:text-gray-400">
                                        {item.subtitle}
                                    </small>
                                </h3>
                            </div>
                            <div class="flex flex-col md:flex-row items-stretch gap-x-8">
                                {item.callout.map((item) => (
                                    <div>
                                        <h4 class="text-lg dark:text-gray-400">
                                            {item.name}
                                        </h4>
                                        <ul class="list-disc ml-6">
                                            {item.bullets.map((item) => (
                                                <li class="dark:text-[#C5D1DE]">
                                                    {item}
                                                </li>
                                            ))}
                                        </ul>
                                    </div>
                                ))}
                            </div>
                        </div>
                    </>
                ))
            }
        </div>
    </div>

    <!-- Accomplishments & Skills -->
    <div class="grid grid-cols-5 gap-x-4 mt-4">
        <!-- Accomplishments -->
        <div class="col-span-2">
            <h2
                class="text-3xl text-sky-700 dark:text-sky-700 font-semibold"
            >
                <i class={content.accomplishments.icon}></i>
                {content.accomplishments.heading}
            </h2>
            <div>
                {
                    content.accomplishments.callout.map((item) => (
                        <>
                            <h4 class="text-xl dark:text-sky-700">
                                {item.name}
                            </h4>
                            <ul class="list-none ml-6">
                                {item.bullets.map((item) => (
                                    <li class="font-light text-gray-500 print:text-gray-300 dark:text-[#C5D1DE]">
                                        {item}
                                    </li>
                                ))}
                            </ul>
                        </>
                    ))
                }
            </div>
        </div>

        <!-- Skills -->
        <div class="col-span-3">
            <h2
                class="text-3xl text-sky-700 dark:text-sky-700 font-semibold"
            >
                <i class={content.skills.icon}></i>
                {content.skills.heading}
            </h2>
            <div class="grid grid-cols-2 justify-items-stretch gap-2 mt-2">
                {
                    content.skills.callout.map((item) => (
                        <div class="border-l-2 pl-2 border-sky-700">
                            <h4 class="text-xl dark:text-sky-700">
                                {item.name}
                            </h4>
                            <ul class="list-none ml-6">
                                {item.items.map((item) => (
                                    <li class="font-light text-gray-500 print:text-gray-300 dark:text-[#C5D1DE]">
                                        {item}
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</div>
